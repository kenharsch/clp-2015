<% if current_user.admin? %>
<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
</style>

<h3>Post Statistics</h3>
<table class="table table-striped" 
  <thead>
    <tr>
     <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Peer Grade</th>
      <th>Avg. Rank</th>
      <th>Draft Length</th>
      <th>Final Length</th>
      <th>Delta Words (draft to final)</th>
    </tr>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_name %></td>
        <td><%= post.user_nickname %></td>
        <td><%= post.peer_grade %></td>
        <td><%= post.avg_rank %></td>
        <td><%= post.draft_length %></td>
        <td><%= post.final_length %></td>
        <td><%= post.delta_words %></td>
      </tr>
    
    <% end %>
    
  </tbody>
  
</table>

<h3>Post Peer Grades</h3>
<table class="table table-striped" 
  <thead>
    <tr>
     <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Id</th>
      <th>Issue</th>
      <th>Evaluation</th>
      <th>Opinion</th>
      <th>Peer Grade</th>
      <th>Avg. Rank</th>
      <th>Delta Words (draft to final)</th>
    </tr>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_name %></td>
        <td><%= post.user_nickname %></td>
        <td><%= post.id %></td>
        <td><%= post.pg_1 %></td>
        <td><%= post.pg_2 %></td>
        <td><%= post.pg_3 %></td>
        <td><%= post.peer_grade %></td>
        <td><%= post.avg_rank %></td>
        <td><%= post.delta_words %></td>
      </tr>
    
    <% end %>
    
  </tbody>
  
</table>



<% else %>
<h2>You cannot access this page.</h2>

<% end %>