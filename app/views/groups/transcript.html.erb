<% if current_user.admin? %>


<% u = @group.users %>
<% p = Post.where(user_id: u).order(:created_at) %>

      <% p.each do |post| %>
      <p>
        <strong>Title:</strong>
        <%= post.title %>
      </p>

      <p>
        <strong>Author:</strong>
        <%= post.user_name %>,&nbsp&nbsp<%= post.user_nickname %>
      </p>

      <p>
        <strong>Problem ID:</strong>
        <%= post.problemID %>
      </p>

      <p>
        <strong>Draft: <%= post.id %></strong>
        <div style="width: 800px;  background-color: #FFFFFF; outline: 2px solid #A05E1D; padding: 5px", class="boxed">
        <%=raw post.draft %>
        </div>
      </p>

      <br>
      <strong>Comments:</strong>
      <br>
      <% post.comments.each do |comment| %>
        <p>
          <div class="boxed">
          <%= comment.body %>
        </div>
        </p>
        <p>
          <strong>By:</strong>
          <%= comment.commenter %>
        </p>
        <br>
         <p>
          <strong>Created:</strong>
          <%= comment.created_at %>
        </p>
        <br>
      <% end %>

      <p>
        <strong>Final:</strong>
        <div style="width: 800px;  background-color: #FFFFFF; outline: 2px solid #A05E1D; padding: 5px", class="boxed">
        <%=raw post.content %>
        </div>
      </p>
       <br>
         <p>
          <strong>Final Length - Draft Length:</strong>
          <%= post.delta_words %>
        </p>
        <br>

    

  <% end %>





<% end %>

